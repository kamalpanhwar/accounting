doctype html
html(lang="en")
  head
    meta(http-equi='Content-Type' content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=devise-width, initial-scale=1,maximum-scale=1.0')
    title= Accounting
    link(rel='stylesheet', href='/css/materialize.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav.light-blue.lighten-1(role='navigation')
      .nav-wrapper.container
        a#logo-container.brand-logo(href='#') WebLedger
        ul.right.hide-on-med-and-down
          if isLoggedIn
            li
              a(href='/system/logout') Logout 
            li
              Signup 
          else
            li
              a(href='/system/login') Login 
            li
              a(href='/system/signup') Signup
              
    #index-banner.section.no-pad-bot
      .container
        .div.row
          .div.col.m10.s12
            if successes
              for success in successes
                div.alert.alert-success #{ success } 
            if errors
              for errors, i in errors
                div.alert.alert-danger #{error}
            block content

    script(src='/js/jquery-2.1.1.min.js')
    script(src='/js/materialize.min.js')
    script(src='/js/script.js')

    block scripts
